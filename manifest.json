{
    "name": "BOSS直聘自动投递简历",
    "version": "1.0",
    "description": "BOSS直聘自动打招呼，自动投递简历",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "tabs",
        "https://www.zhipin.com/"
    ],
    "page_action": {
        "default_popup": "html/popup-react.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    }
}